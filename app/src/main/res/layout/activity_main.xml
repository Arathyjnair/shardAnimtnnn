<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/l1"
    android:background="@drawable/snowww"
    tools:context=".MainActivity">


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:id="@+id/textvieww"
            android:textColor="#f109ce"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:text="Snow White premiered at the Carthay Circle Theatre on December 21, 1937, followed by a nationwide release on February 4, 1938. It was a critical and commercial success, and with international earnings of $8 million during its initial release briefly assumed the record of highest-grossing sound film . "
            android:textSize="20dp" />
        </LinearLayout>
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal"
    >

<com.mikhaellopez.circularimageview.CircularImageView

    android:id="@+id/imageView"
    android:layout_width="180dp"

    android:layout_height="180dp"
    android:layout_centerHorizontal="true"
    android:src="@drawable/snowwhite"
    android:layout_marginLeft="100dp"
    android:layout_marginTop="60dp"

    >

</com.mikhaellopez.circularimageview.CircularImageView>




</LinearLayout>

</LinearLayout>